<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        style="@style/linear_layout_background_style"
        android:weightSum="3"
        tools:context=".view.detail.OtherFragment">

        <ImageView
            android:id="@+id/text_qr_code_iv"
            style="@style/qr_code_image_view_style"
            android:layout_weight="2"
            android:contentDescription="@string/qr_code" />

        <LinearLayout
            style="@style/linear_layout_background_style"
            android:layout_weight="1">

            <Button
                android:id="@+id/save_btn"
                style="@style/button_center_style"

                android:text="@string/save_to_gallery" />

            <TextView
                style="@style/text_content_title_style"
                android:text="@string/text" />


            <TextView
                android:id="@+id/text_data_tv"
                style="@style/data_text_style"
                android:maxLines="10"
                tools:text="@tools:sample/lorem/random" />

            <Button
                android:id="@+id/copy_to_clipboard_btn"
                style="@style/button_center_style"
                android:text="@string/copy_to_clipboard" />
        </LinearLayout>

    </LinearLayout>

</layout>