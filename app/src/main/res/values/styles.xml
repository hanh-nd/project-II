<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="qr_code_image_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="data_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        "
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_content_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="button_center_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginVertical">16dp</item>
    </style>

    <style name="linear_layout_background_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="studio_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="drawableTint">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">24dp</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>

    <style name="text_input_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:background">@color/gray_light</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>